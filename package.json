{
  "name": "prowl-adapter",
  "display_name": "Prowl",
  "version": "0.2.3",
  "description": "Pushes notifications to your device",
  "main": "lib/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc -p ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tim-hellhake/prowl-adapter.git"
  },
  "author": "Tim Hellhake",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/tim-hellhake/prowl-adapter/issues"
  },
  "homepage": "https://github.com/tim-hellhake/prowl-adapter#readme",
  "files": [
    "LICENSE",
    "SHA256SUMS",
    "manifest.json",
    "lib/index.js",
    "lib/prowl-adapter.js",
    "lib/prowl-notifier.js"
  ],
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "type": "notifier",
    "plugin": true,
    "exec": "{nodeLoader} {path}",
    "schema": {
      "type": "object",
      "required": [
        "apiKey"
      ],
      "properties": {
        "apiKey": {
          "type": "string",
          "title": "The api key"
        },
        "messages": {
          "type": "array",
          "title": "Predefined messages",
          "items": {
            "type": "object",
            "title": "A predefined message",
            "required": [
              "name",
              "application",
              "event",
              "description"
            ],
            "properties": {
              "name": {
                "type": "string",
                "title": "The name of the action"
              },
              "application": {
                "type": "string",
                "title": "The name of the application"
              },
              "event": {
                "type": "string",
                "title": "The name of the event"
              },
              "description": {
                "type": "string",
                "title": "The description of the message"
              }
            }
          }
        }
      }
    }
  },
  "dependencies": {
    "node-prowl": "^0.1.7"
  },
  "devDependencies": {
    "@types/node": "^13.9.0",
    "typescript": "^3.8.3"
  }
}
